@model Category


<form method="post" asp-action="Delete">
    <input asp-for="ID" hidden />
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" type="text" />
          
        </div>
                <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" type="text" />
         

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index"  style="width:150px" class="btn btn-secondary" >Back to List</a>
    </div>
</form>

@*Use for Client side validation*@
@section Scripts{
@{
        <partial name="_ValidationScriptsPartial" />
}
}

